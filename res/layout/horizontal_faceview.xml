<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gallery_faces"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/image_mariama"
            android:layout_width="@dimen/create_image_size"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/image_border_selector"
            android:padding="16dp"
            android:src="@drawable/mariama_center" />

        <ImageView
            android:id="@+id/image_mike"
            android:layout_width="@dimen/create_image_size"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:padding="16dp"
            android:paddingLeft="16dp"
            android:src="@drawable/mike_center" />

        <ImageView
            android:id="@+id/image_joelle"
            android:layout_width="@dimen/create_image_size"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:padding="16dp"
            android:src="@drawable/joelle_center" />

        <ImageView
            android:id="@+id/image_aurelien"
            android:layout_width="@dimen/create_image_size"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:padding="16dp"
            android:src="@drawable/aurelien_center" />
    </LinearLayout>

</HorizontalScrollView>